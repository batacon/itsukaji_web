<section class="<%= @class_name %>">
  <h3 class="flex items-center mb-3 text-primary font-bold">
    <%= image_tag icon_name, class: 'mr-2' %>
    <%= heading %>
  </h3>

  <%= form_with url: users_path do |form| %>
    <%= form.hidden_field :name, value: @name %>
    <%= form.hidden_field :email, value: @email %>

    <% if @by_invitation %>
      <div class="flex flex-col mb-3">
        <%= form.label '招待してくれた人のGmailアドレス', class: 'mb-2' %>
        <%= form.email_field :inviter_email, class: 'rounded' %>
      </div>

      <div class="flex flex-col mb-3">
        <%= form.label '招待コード', class: 'mb-2' %>
        <%= form.text_field :invitation_code, class: 'rounded' %>
      </div>
    <% end %>

    <div class="flex flex-row-reverse">
      <%= render(SubmitButtonComponent.new(form:, label: submit_label)) %>
    </div>
  <% end %>
</section>
