<li>
  <%= form_with(model: @form_target) do |form| %>
    <%= form.date_field :date,
          min: next_date_of_previous_log,
          max: previous_date_of_next_log,
          onchange: 'saveLogDate()',
          required: true,
          style: 'border: none; width: 150px;'
    %>
    <%= how_many_days_ago %>
    <%= form.submit '', id: @form_submit_id %>
  <% end %>
</li>

<script>
  function saveLogDate() {
    document.getElementById("<%= @form_submit_id %>").click();
  }
</script>