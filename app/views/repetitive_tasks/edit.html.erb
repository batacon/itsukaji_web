
<div class="flex flex-row-reverse">
  <%= button_to '×', repetitive_task_path(@repetitive_task),
        method: :delete,
        form: { data: { turbo_confirm: "タスクを削除しますか？" } },
        class: 'border text-red-500 rounded p-3'
  %>
</div>

<div>
  <%= form_with(model: @repetitive_task) do |form| %>
    <p class="text-xs leading-none text-primary font-bold">(必須 / 20文字まで)</p>
    <div class="mb-10">
      <%= form.label 'タスク名', class: 'mr-2' %>
      <%= form.text_field :name, maxlength: 20, required: true %>
    </div>

    <p class="text-xs leading-none text-primary font-bold">(必須 / 0〜999日まで)</p>
    <div class="mb-10">
      <%= form.label '間隔(日)', class: 'mr-2' %>
      <%= form.number_field :interval_days, min: 1, max: 999, step: 1, required: true %>
    </div>

    <div class="flex flex-row-reverse">
      <%= form.submit '保存する', class: 'border rounded p-4' %>
    </div>
  <% end %>
</div>

<section class="mt-6">
  <h3 class="text-lg font-bold">やったログ</h3>
  <ul>
    <%= render(RepetitiveTaskLogComponent.with_collection(@repetitive_task.logs)) %>
  </ul>
</section>